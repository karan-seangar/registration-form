
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <title>Registration form</title>

    <style>
        .container-fluid {
            width: 600px;
            border-radius: 1% 5% 1% 5%;
            /*border: 2px solid;*/
            border-color: rgb(221, 157, 168);
            box-shadow: 1px 1px 5px 5px skyblue;
            margin: auto;
        }

        body {
            background-image: url("https://img.freepik.com/premium-photo/top-view-note-book-with-airplane-toy-pen-sky-blue-background-with-copy-space_43284-1044.jpg?size=626&ext=jpg&ga=GA1.2.202181420.1685344252&semt=ais");
            background-repeat: no-repeat;
            background-size: cover;
        }

        label {
            margin-left: 1px;
            margin-bottom: 1%;
        }

        input[type='radio'] {
            margin-left: 5%;
        }

        .input-group input:focus {
            outline: 0;
        }

        .input-group.success input {
            border-color: #09c372;
        }

        .input-group.error input {
            border-color: #ff3860;
        }

        h1 {
            font-family: 'Times New Roman', Times, serif;
            color: black;
        }
    </style>
</head>
<body>
    <div class="container-fluid mb-5 mt-5">
        <div class="container col-lg-pull-5 mt-5">
            <form action="/action_page.php" id="form">
                <div class="text-center mt-3 mb-5">
                    <h1>Hotel Registration</h1>
                    <hr />
                </div>
                <div class="row mb-2 mt-3">
                    <div class="col-sm-6 mb-4 ">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-pen"></i></span>
                            <input type="text" class="form-control" id="fname" name="name" onkeyup="validatefName(this.value)"
                                   placeholder="First name" required>

                        </div>
                    </div>

                    <div class="col-sm-6 mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-pen"></i></span>
                            <input type="text" class="form-control" id="lname" name="name" onkeyup="validatelName(this.value)"
                                   onclick="checksum()" placeholder="Last name" required>
                        </div>

                    </div>
                    <div id="msg" class="input-group mb-1 alert alert-danger"><span id="message"></span></div>
                </div>


                <div class="row mb-2 mt-3">
                    <div class="col-sm-6 mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-sharp fa-solid fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" placeholder="Enter email"
                                   onclick="checksum()" onkeyup="checkEmail(this.value)" name="email" ng-model="checkEmail" required>
                        </div>
                    </div>

                    <div class="col-sm-6 mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                            <input type="password" class="form-control" id="pwd" onkeyup="checkPassword(this.value)"
                                   onclick="checksum()" placeholder="Enter password" name="pswd" required>
                        </div>
                    </div>
                    <div id="msg2" class="input-group mb-1 alert alert-danger"><span id="message2"></span></div>
                </div>
                <div class="row mb-2 mt-3 ">
                    <div class="col-sm-6 mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                            <input type="number" class="form-control" id="phoneno" onclick="checksum()"
                                   onkeyup="checkPnumber(this.value)" placeholder="Phone no" required>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                            <input type="number" class="form-control" id="adharno" onkeyup="checkadhrno(this.value)"
                                   onclick="checksum()" placeholder="Aadhar no" required>
                        </div>

                    </div>
                    <div id="msg3" class="input-group mb-1 alert alert-danger"><span id="message3"></span></div>
                </div>
                <div class="mb-3">
                    <label for="text" id="gender" class="form-label">Gender</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-neuter"></i>
                        </span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" onclick="checksum()"
                                   name="inlineRadioOptions" id="inlineRadio1" value="option1" checked>
                            <label class="form-check-label" for="inlineRadio1">Male</label>
                        </div>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                   onclick="checksum()" id="inlineRadio2" value="option2">
                            <label class="form-check-label" for="inlineRadio2">Female</label>
                        </div>
                    </div>
                    <div id="msg6" class="input-group mb-1 alert alert-danger"><span id="message6"></span></div>
                </div>
                <div class="row mb-2 mt-3 ">
                    <div class="col-sm-12 mb-1">
                        <label class="form-label"> D.O.B: </label><br />
                        <div class="input-group">

                            <span class="input-group-text"><i class="fa-solid fa-calendar-days"></i></span>
                            <input type="date" class="form-control" id="date" onclick="checksum()"
                                   onkeyup="checkDate(this.value)" required>
                        </div>


                    </div>
                    <div id="msg4" class="input-group mb-1 alert alert-danger"><span id="message4"></span></div>
                </div>
                <label>Room type:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-bed"></i></span>
                    <select class="form-select" id="select" onclick="checksum()" onchange="checkDropdown(this.value)" required>
                        <option value="">Select</option>
                        <option value="luxury">luxury</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="Normal">Normal</option>
                        <option value="Bunkbed">Bunkbed</option>
                    </select>
                </div>
                <div id="msg5" class="input-group mb-1 alert alert-danger"><span id="message5"></span></div>

                <div class="container">
                    <div class="row mb-2 mt-3 text-left ">
                        <div class="form-check mb-3 col-sm-4 ml-5">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" onclick="checksum()" name="remember">
                                Remember me
                            </label>
                        </div>
                        <div class="form-check mb-3 col-sm-6 ml-5">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" onclick="checksum()" name="terms"
                                       required> I accept all terms and conditions.
                            </label>
                        </div>
                    </div>
                </div>
                <div class="d-grid">
                    <button type="submit" id="submit"
                            class="btn btn-primary btn-block mb-3 ml-50">
                        Submit
                    </button>
                </div>
            </form>
        </div>

    </div>
    <script src="~/Scripts/myJs.js"></script>
    
</body>
</html>
