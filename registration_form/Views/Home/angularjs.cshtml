    <script>
        var app = angular.module('myApp', []);
        app.controller('validateCtrl', function ($scope) {
            $scope.name_regex = /^[A-Za-z]+$/;
            $scope.email_regex = /^[a-zA-z]+[a-zA-Z0-9]+[@@]{1}gmail.com$/;
            $scope.pswd_regex = /^(?!.*\s)(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*[~`!@@#$%^&*()--+={}\[\]|\\:;"'<>,.?/_₹]).{8,}$/;
            $scope.phone_regex = /^[\+]?[(]?[0-9]{3}[)]?[-\s\]?[0-9]{3}[-\s\]?[0-9]{4}$/;
            $scope.adhar_regex = /^[\+]?[(]?[0-9]{4}[)]?[-\s\]?[0-9]{4}[-\s\]?[0-9]{4}$/;
            $scope.validate_radio = function () {
                let getSelectedValue = $scope.radioOPtion;
                console.log(getSelectedValue);
                if (getSelectedValue == null || getSelectedValue == undefined || getSelectedValue == "") {
                    $scope.rad = true;
                }
                else {
                    $scope.rad = false;
                }
            };
            $scope.validate_date = function () {
                let date_input = $scope.dob;
                let max_date = new Date(1900 - 01 - 01);
                var today = new Date();
                var validMinDate = new Date(
                    today.getFullYear() - 18,
                    today.getMonth(),
                    today.getDate(),
                    today.getHours(),
                    today.getMinutes()
                );
                if (date_input > validMinDate) {
                    $scope.date_error = true;
                }
                else if (date_input < max_date) {
                    $scope.date_error = true;
                }
                else {
                    $scope.date_error = false;
                }

            };
            $scope.validate_room = function () {
                let gen = $scope.room;
                
                if (room == "" || room == null || room == undefined) {
                    $scope.room_error = true;
                }
                else {
                    $scope.room_error = false;
                }
            };

            });

    </script>
